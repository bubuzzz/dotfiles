root = true

[*]
trim_trailing_whitespace = true
insert_final_newline = true

[*.md]
trim_trailing_whitespace = false

[**.js]
indent_size = 2
indent_style = space
indent_level = 0
indent_with_tabs = false
preserve_newlines = true
max_preserve_newlines = 10
jslint_happy = false
brace_style = collapse-preserve-inline
space_before_conditional = true

[**.json]
indent_style = space
indent_size = 2

[**.jsx]
e4x = true
indent_style = space
indent_size = 2

[**.css]
indent_style = space
indent_size = 2

[**.html]
indent_style = space
indent_size = 4
max_char = 78
